    </head>

    <body>
        <!-- ======= Header ======= -->
        <header id="header" class="header fixed-top d-flex align-items-center">
            <div class="d-flex align-items-center justify-content-between">
                <i
                    class="bi bi-list toggle-sidebar-btn"
                    style="margin-right: 1rem"
                ></i>
                <a
                    href="index.html"
                    class="logo d-flex align-items-center"
                    style="width: 100%"
                >
                    <img src="../../assets/img/Logo-unhas.png" alt="" />
                    <span class="d-none d-lg-block">BANKSOAL FKG-UNHAS</span>
                </a>
            </div>
            <!-- End Logo -->

            <nav class="header-nav ms-auto">
                <ul class="d-flex align-items-center">
                    <li class="nav-item dropdown pe-3">
                        <a
                            class="nav-link nav-profile d-flex align-items-center pe-0"
                            href="#"
                            data-bs-toggle="dropdown"
                        >
                            <img
                                src="../../assets/img/messages-2.jpg"
                                alt="Profile"
                                class="rounded-circle"
                            />
                            <span class="d-none d-md-block dropdown-toggle ps-2"
                                ><%= nama %></span
                            > </a
                        ><!-- End Profile Iamge Icon -->

                        <ul
                            class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile"
                        >
                            <li>
                                <a
                                    class="dropdown-item d-flex align-items-center"
                                    href="/penulis/profil"
                                >
                                    <i class="bi bi-person"></i>
                                    <span>My Profile</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>

                            <li>
                                <a
                                    class="dropdown-item d-flex align-items-center"
                                    href="/signout"
                                >
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Sign Out</span>
                                </a>
                            </li>
                        </ul>
                        <!-- End Profile Dropdown Items -->
                    </li>
                    <!-- End Profile Nav -->
                </ul>
            </nav>
            <!-- End Icons Navigation -->
        </header>
        <!-- End Header -->

        <!-- ======= Sidebar ======= -->
        <aside id="sidebar" class="sidebar">
            <ul class="sidebar-nav" id="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link collapsed" href="/dashboard">
                        <i class="bi bi-house-door logo-sidebar"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <!-- End Dashboard Nav -->

                <li class="nav-item">
                    <a
                        class="nav-link"
                        data-bs-target="#components-nav"
                        data-bs-toggle="collapse"
                        href="#"
                    >
                        <i class="bi bi-card-list logo-sidebar"></i>
                        <span>Tulis Soal</span
                        ><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul
                        id="components-nav"
                        class="nav-content collapse show"
                        data-bs-parent="#sidebar-nav"
                    >
                        <li>
                            <a
                                href="/tulis-soal/daftar-soal-teori"
                                class="active"
                            >
                                <i class="bi bi-circle"></i
                                ><span>Tulis Soal Uji Teori</span>
                            </a>
                        </li>
                        <li>
                            <a href="/tulis-soal/daftar-soal-praktek">
                                <i class="bi bi-circle"></i
                                ><span>Tulis Soal Uji Praktek</span>
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- End Components Nav -->

                <li class="nav-item">
                    <a
                        class="nav-link collapsed"
                        data-bs-target="#forms-nav"
                        data-bs-toggle="collapse"
                        href="#"
                    >
                        <i class="bi bi-card-checklist logo-sidebar"></i>
                        <span>Telaah Soal Lokal</span
                        ><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul
                        id="forms-nav"
                        class="nav-content collapse"
                        data-bs-parent="#sidebar-nav"
                    >
                        <li>
                            <a href="/telaah-soal/telaah-soal-teori">
                                <i class="bi bi-circle"></i
                                ><span>Telaah Soal Uji Teori</span>
                            </a>
                        </li>
                        <li>
                            <a href="/telaah-soal/telaah-soal-praktek">
                                <i class="bi bi-circle"></i
                                ><span>Telaah Soal Uji Praktek</span>
                            </a>
                        </li>
                    </ul>
                </li>
                <!-- End Forms Nav -->

                <li class="nav-item">
                    <a
                        class="nav-link collapsed"
                        href="/penulis/daftar-penulis"
                    >
                        <i class="bi bi-person-workspace logo-sidebar"></i>
                        <span>Daftar Penulis</span>
                    </a>
                </li>
            </ul>
        </aside>
        <!-- End Sidebar-->

        <% for (const result of data) { %>

        <main id="main" class="main">
            <section class="section">
                <div class="card card-container">
                    <div class="card-judul">
                        <h1>Lihat Soal Uji Teori</h1>
                        <hr />
                    </div>
                    <div class="col-12">
                        <span class="judul-btn"> Tinjauan Soal</span>
                        <div class="subjudul-soal">
                            <label>No Register Soal</label>
                            <span> : </span>
                            <span>
                                <%= result.nomor + "/" + result.tinjauan1 + "/"
                                + result.tinjauan2 + "/" + result.tinjauan3 +
                                "/" + result.bulan + "/" + result.tahun%></span
                            >
                        </div>
                        <span class="judul-btn">Soal</span>
                        <div class="subjudul-soal">
                            <label>Vignette</label>

                            <span> : </span> <br />
                            <span class="vignetteDanPertanyaan"
                                ><%- result.vignette %></span
                            >
                        </div>
                        <div class="subjudul-soal">
                            <label>Gambar</label>
                            <span> : </span>
                            <div class="gambar">
                                <% if (result.gambar) { %>
                                <img
                                    src="../../../<%= result.gambar %>"
                                    alt=""
                                    class="gambar-soal"
                                />
                                <% } else { %>
                                <img
                                    src="http://iba-ukmp2dg.kemdikbud.go.id/osceimg/no_image.jpg"
                                    alt=""
                                />
                                <% } %>
                            </div>
                        </div>
                        <div class="subjudul-soal">
                            <label>Pertanyaan / Intruksi</label>
                            <span> : </span> <br />
                            <span class="vignetteDanPertanyaan"
                                ><%- result.pertanyaan %></span
                            >
                        </div>
                        <div class="subjudul-soal">
                            <label>Pilihan A</label>
                            <span> : </span>
                            <span><%= result.jawabanA %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Pilihan B</label>
                            <span> : </span>
                            <span><%= result.jawabanB %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Pilihan C</label>
                            <span> : </span>
                            <span><%= result.jawabanC %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Pilihan D</label>
                            <span> : </span>
                            <span><%= result.jawabanD %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Pilihan E</label>
                            <span> : </span>
                            <span><%= result.jawabanE %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Kunci</label>
                            <span> : </span>
                            <span><%= result.kunci %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Alasan Singkat</label>
                            <span> : </span>
                            <span><%= result.alasan_singkat %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Referensi</label>
                            <span> : </span>
                            <span><%= result.referensi %></span>
                        </div>
                        <div class="subjudul-soal">
                            <label>Penulis</label>
                            <span> : </span>
                            <span><%= result.pembuat %></span>
                        </div>
                        <div class="action mt-3 mb-3">
                            <button
                                class="btn btn-primary"
                                onclick="location.href = '/tulis-soal/ubah-soal-teori/<%= result.id %>'"
                            >
                                Ubah Soal
                            </button>

                            <% if (result.gambar) { %>
                            <button
                                class="btn btn-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#ganti-gambar"
                            >
                                Ubah Gambar
                            </button>
                            <% } else { %>
                            <button
                                class="btn btn-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#ganti-gambar"
                            >
                                Tambah Gambar
                            </button>
                            <% } %> <% if (result.gambar) { %>
                            <button
                                class="btn btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#hapus-gambar"
                            >
                                Hapus Gambar
                            </button>
                            <% } else { %>
                            <button class="btn btn-danger d-none">
                                Hapus Gambar
                            </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <!-- End #main -->

        <!-- modal ganti gambar -->
        <div class="modal fade" id="ganti-gambar" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <% if (result.gambar) { %>
                    <form id="ganti-gambar">
                        <div class="modal-header">
                            <h5 class="modal-title" style="font-weight: 600">
                                Ganti Gambar
                            </h5>
                            <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                            ></button>
                        </div>
                        <div class="modal-body">
                            <div class="gambar">
                                <div class="input-gambar">
                                    <input
                                        type="file"
                                        name="gambar"
                                        id="gambar"
                                        required
                                        class="input-container mb-2"
                                    />
                                    <p>
                                        <strong> Perhatian: </strong>
                                        Gambar Tidak boleh lebih dari 512 KB
                                        atau 0.5 MB, ukuran dimensi gambar
                                        maksimal lebar 128 pixel dan tinggi 128
                                        pixel.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button
                                type="submit"
                                class="btn btn-primary"
                                id="ganti-gambar"
                            >
                                Ganti Gambar
                            </button>
                        </div>
                    </form>
                    <% } else { %>
                    <form id="tambah-gambar">
                        <div class="modal-header">
                            <h5 class="modal-title" style="font-weight: 600">
                                Tambah Gambar
                            </h5>
                            <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                            ></button>
                        </div>
                        <div class="modal-body">
                            <div class="gambar">
                                <div class="input-gambar">
                                    <input
                                        type="file"
                                        name="gambar"
                                        id="gambar"
                                        required
                                        class="input-container mb-2"
                                    />
                                    <p>
                                        <strong> Perhatian: </strong>
                                        <span id="tambah-msg">
                                            Gambar Tidak boleh lebih dari 512 KB
                                            atau 0.5 MB, ukuran dimensi gambar
                                            maksimal lebar 128 pixel dan tinggi
                                            128 pixel.
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button
                                type="submit"
                                class="btn btn-primary"
                                id="ganti-gambar"
                            >
                                Tambah Gambar
                            </button>
                        </div>
                    </form>
                    <% } %>
                </div>
            </div>
        </div>
        <!-- End Basic Modal-->

        <!-- modal ganti gambar -->
        <div class="modal fade" id="hapus-gambar" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" style="font-weight: 600">
                            Hapus Gambar Soal
                        </h5>
                        <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                        ></button>
                    </div>
                    <div class="modal-body">
                        <p id="hapus-msg">Yakin menghapus gambar soal?</p>
                    </div>
                    <div class="modal-footer">
                        <button
                            type="submit"
                            class="btn btn-danger"
                            id="hapus-gambar"
                        >
                            Hapus Gambar Soal
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Basic Modal-->

        <a
            href="#"
            class="back-to-top d-flex align-items-center justify-content-center"
            ><i class="bi bi-arrow-up-short"></i
        ></a>

        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

        <!-- Vendor JS Files -->
        <script src="../../assets/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="../../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="../../assets/vendor/chart.js/chart.umd.js"></script>
        <script src="../../assets/vendor/echarts/echarts.min.js"></script>
        <script src="../../assets/vendor/quill/quill.min.js"></script>
        <script src="../../assets/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="../../assets/vendor/tinymce/tinymce.min.js"></script>
        <script src="../../assets/vendor/php-email-form/validate.js"></script>

        <!-- Template Main JS File -->
        <script src="../../assets/js/main.js"></script>

        <script>
            const ganti = document.getElementById("ganti-gambar");
            const tambah = document.getElementById("tambah-gambar");
            const hapus = document.getElementById("hapus-gambar");
            const hapusmsg = document.getElementById("hapus-msg");
            const tambahmsg = document.getElementById("tambah-msg");

            if ("<%= result.gambar %>") {
                ganti.addEventListener("submit", (e) => {
                    const gambar = document.getElementById("gambar").files[0];
                    e.preventDefault();

                    const formData = new FormData();
                    formData.append("gambarBaru", gambar);
                    fetch(
                        "/tulis-soal/lihat-soal/ubah-gambar-teori/<%= result.id %>",
                        {
                            method: "POST",
                            body: formData,
                        }
                    ).then((result) => {
                        if (result.statusText == "Gambar telah diubah") {
                            // tambahmsg.innerHTML =
                            //     "Gambar telah ditambahkan silahkan refresh halaman ini";
                            location.reload();
                        }
                    });
                });
            } else {
                tambah.addEventListener("submit", (e) => {
                    const gambar = document.getElementById("gambar").files[0];
                    e.preventDefault();

                    const formData = new FormData();
                    formData.append("gambar", gambar);
                    fetch(
                        "/tulis-soal/lihat-soal/tambah-gambar-teori/<%= result.id %>",
                        {
                            method: "POST",
                            body: formData,
                        }
                    ).then((result) => {
                        if (result.statusText == "Gambar telah ditambahkan") {
                            // tambahmsg.innerHTML =
                            //     "Gambar telah ditambahkan silahkan refresh halaman ini";
                            location.reload();
                        }
                    });
                });
            }

            hapus.addEventListener("click", () => {
                fetch(
                    "/tulis-soal/lihat-soal/hapus-gambar-teori/<%= result.id %>",
                    {
                        method: "DELETE",
                    }
                ).then((result) => {
                    if (result.statusText == "Gambar telah dihapus") {
                        // hapusmsg.innerHTML =
                        //     "Gambar telah dihapus silahkan refresh halaman ini";
                        location.reload();
                    }
                });
            });
        </script>

        <% } %>

        <!-- bootstrap js -->
        <script
            src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
