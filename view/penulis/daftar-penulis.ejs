        <script>
            var table = $("#example").DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/penulis/daftar-penulis/data",
                    type: "GET",
                },
                paging: true,
                lengthMenu: [
                    [5, 10, 25, 50, 100],
                    [5, 10, 25, 50, 100],
                ],
                columns: [
                    { data: "tbl_nomor", title: "No" },
                    { data: "tbl_email", title: "User" },
                    { data: "tbl_nama", title: "Nama" },
                    { data: "tbl_status", title: "Status" },
                ],
                columnDefs: [
                    {
                        targets: 0,
                        width: "10%",
                    },
                    {
                        targets: 2,
                        width: "30%",
                    },
                    {
                        width: "15%",
                        targets: 3,
                        render: function (data, type, row) {
                            if (data == 1) {
                                return "<button class='btn btn-success p-1'>Sedang Aktif</button>";
                            } else {
                                return "<button class='badge badge-warning'>Sedang offline</button>";
                            }
                        },
                    },
                    {
                        width: "14%",
                        targets: 4,
                        data: null,
                        // defaultContent: `<div class='btn-group'><button type='button' class='btn btn-primary dropdown-toggle p-1' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>Lihat</button><div class='dropdown-menu menuDropdown'><a class='dropdown-item' id='lihat-detail'>Lihat Detail</a><a class='dropdown-item' href='#'>Ubah Penulis</a>`,
                        defaultContent:
                            "<a id='lihat-detail' class='btn btn-primary p-1'>Lihat Detail</a>",
                    },
                ],
            });

            $("#example tbody").on("click", "#lihat-detail", function () {
                var data = table.row($(this).parents("tr")).data();

                location.href = `/penulis/detail-penulis/${data.tbl_id}`;
            });
        </script>

