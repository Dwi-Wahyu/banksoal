        <main id="main" class="main">
            <section class="section">
                <div class="card card-container">
                    <div class="card-judul">
                        <h1>Lihat Detail Penulis</h1>
                        <hr />
                    </div>

                    <% for (let response of data) { %>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                            <label for="institusi" class="mb-1"
                                >Institusi :</label
                            >
                            <input
                                class="form-control"
                                disabled="disabled"
                                placeholder="Fakultas Kedokteran Gigi Universitas Hasanuddin - Makassar"
                                type="text"
                            />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                            <label for="institusi" class="mb-1"
                                >Kelompok :</label
                            >
                            <input
                                class="form-control disabled"
                                disabled
                                id="kelompok"
                                placeholder="Penulis Soal"
                                type="text"
                            />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                            <label for="penulis" class="mb-1 mt-2"
                                >Email * :</label
                            >
                            <input
                                class="form-control input-penulis"
                                disabled
                                placeholder="<%= response.email %>"
                                value="<%= response.email %>"
                                id="email"
                                name="email"
                                type="text"
                                autocomplete="off"
                                required
                            />
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                            <label for="penulis" class="mb-1 mt-2"
                                >Departemen * :</label
                            >
                            <select
                                name="departemen"
                                id="departemen"
                                class="select2_single form-control"
                            >
                                <option></option>
                                <option value="1">Biologi Oral</option>
                                <option value="13">Biomedik</option>
                                <option value="2">Dental Material</option>
                                <option value="4">
                                    Ilmu Bedah Mulut dan Maksilofasial (Oral and
                                    Maxillofacial Surgery)
                                </option>
                                <option value="5">
                                    Ilmu Kedokteran Gigi Anak (Pediatric
                                    Dentistry)
                                </option>
                                <option value="11">
                                    Ilmu Kedokteran Gigi dan Mulut Masyarakat
                                </option>
                                <option value="12">
                                    Ilmu Kedokteran Gigi Interdisiplin
                                </option>
                                <option value="14">Ilmu Konservasi Gigi</option>
                                <option value="6">
                                    Ilmu Penyakit Mulut (Oral Medicine)
                                </option>
                                <option value="7">
                                    Orthodonsia (Orthodontics)
                                </option>
                                <option value="3">
                                    Patologi Mulut dan Maksilofasial
                                </option>
                                <option value="8">
                                    Periodonsia (Periodontics)
                                </option>
                                <option value="9">
                                    Prostodonsia (Prosthodontics)
                                </option>
                                <option value="10">
                                    Radiologi Kedokteran Gigi (Oral and
                                    Maxillofacial Radiology)
                                </option>
                            </select>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                            <label for="penulis" class="mb-1 mt-2"
                                >Nama Depan * :</label
                            >
                            <input
                                class="form-control input-penulis"
                                disabled
                                placeholder="<%= response.first_name %>"
                                value="<%= response.first_name %>"
                                id="nama-depan"
                                name="first_name"
                                type="text"
                                autocomplete="off"
                                required
                            />
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                            <label for="penulis" class="mb-1 mt-2"
                                >Nama Belakang * :</label
                            >
                            <input
                                class="form-control input-penulis"
                                disabled
                                placeholder="<%= response.last_name %>"
                                value="<%= response.last_name %>"
                                id="nama-belakang"
                                name="last_name"
                                type="text"
                                autocomplete="off"
                                required
                            />
                        </div>
                        <div class="d-flex">
                            <div class="mt-3" style="margin-right: 1rem">
                                <button
                                    class="btn btn-primary"
                                    onclick="location.href='/penulis/daftar-penulis'"
                                >
                                    Kembali
                                </button>
                            </div>
                            <div class="mt-3" style="margin-right: 1rem">
                                <input
                                    type="button"
                                    class="btn btn-primary"
                                    id="ubah"
                                    value="Ubah Penulis"
                                />
                            </div>
                            <div class="mt-3">
                                <button
                                    class="btn btn-primary"
                                    id="simpan"
                                    disabled
                                >
                                    Simpan
                                </button>
                            </div>
                        </div>
                    </div>

                    <input
                        type="text"
                        id="id"
                        value="<%= response.id %>"
                        style="display: none"
                    />
                </div>
            </section>
        </main>
