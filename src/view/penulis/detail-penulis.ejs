<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>BANKSOAL FKG</title>
    <meta content="" name="description" />
    <meta content="" name="keywords" />

    <!-- Favicons -->
    <link href="/src/view/assets/img/favicon.png" rel="icon" />
    <link href="/src/view/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link href="/src/view/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/src/view/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="/src/view/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="/src/view/assets/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="/src/view/assets/vendor/quill/quill.bubble.css" rel="stylesheet" />
    <link href="/src/view/assets/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="/src/view/assets/vendor/simple-datatables/style.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="/src/view/assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/src/view/assets/css/template.css" />
    <link rel="stylesheet" href="/src/view/assets/css/buat-soal.css" />
    <link rel="stylesheet" href="/src/view/assets/css/penulis.css" />
  </head>

  <body>
    <div class="popup-info-wrap">
      <div class="popup-wrap" id="popup-success">
        <div class="popup-info">
          <div class="popup-title-success">
            <h1>Info</h1>
            <i class="bi bi-x-lg closebtn" onclick="close()"></i>
          </div>
          <div class="popup-body">
            <p>Berhasil update penulis</p>
          </div>
          <div class="popup-footer">
            <div class="popup-button">
              <span></span>
              <button class="btn btn-primary closebtn" onclick="close()" id="closeBTN">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- header -->
    <%- include('../partials/header') %>

    <!-- sidebar -->
    <%- include('../partials/sidebarAdmin', { link: 'penulis', parent: 'penulis' }) %>

    <main id="main" class="main">
      <section class="section">
        <div class="card card-container">
          <div class="card-judul">
            <h1>Lihat Detail Penulis</h1>
            <hr />
          </div>

          <% for (let response of data) { %>

          <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
              <label for="institusi" class="mb-1">Institusi :</label>
              <input
                class="form-control"
                disabled="disabled"
                placeholder="Fakultas Kedokteran Gigi Universitas Hasanuddin - Makassar"
                type="text"
              />
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
              <label for="institusi" class="mb-1">Kelompok :</label>
              <input
                class="form-control disabled"
                disabled
                id="kelompok"
                placeholder="Penulis Soal"
                type="text"
              />
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
              <label for="penulis" class="mb-1 mt-2">Email * :</label>
              <input
                class="form-control input-penulis"
                disabled
                placeholder="<%= response.email %>"
                value="<%= response.email %>"
                id="email"
                name="email"
                type="text"
                autocomplete="off"
                required
              />
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
              <label for="penulis" class="mb-1 mt-2">Departemen * :</label>
              <select name="departemen" id="departemen" class="select2_single form-control">
                <option></option>
                <option value="1">Biologi Oral</option>
                <option value="13">Biomedik</option>
                <option value="2">Dental Material</option>
                <option value="4">
                  Ilmu Bedah Mulut dan Maksilofasial (Oral and Maxillofacial Surgery)
                </option>
                <option value="5">Ilmu Kedokteran Gigi Anak (Pediatric Dentistry)</option>
                <option value="11">Ilmu Kedokteran Gigi dan Mulut Masyarakat</option>
                <option value="12">Ilmu Kedokteran Gigi Interdisiplin</option>
                <option value="14">Ilmu Konservasi Gigi</option>
                <option value="6">Ilmu Penyakit Mulut (Oral Medicine)</option>
                <option value="7">Orthodonsia (Orthodontics)</option>
                <option value="3">Patologi Mulut dan Maksilofasial</option>
                <option value="8">Periodonsia (Periodontics)</option>
                <option value="9">Prostodonsia (Prosthodontics)</option>
                <option value="10">
                  Radiologi Kedokteran Gigi (Oral and Maxillofacial Radiology)
                </option>
              </select>
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
              <label for="penulis" class="mb-1 mt-2">Nama Depan * :</label>
              <input
                class="form-control input-penulis"
                disabled
                placeholder="<%= response.first_name %>"
                value="<%= response.first_name %>"
                id="nama-depan"
                name="first_name"
                type="text"
                autocomplete="off"
                required
              />
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12 form-group">
              <label for="penulis" class="mb-1 mt-2">Nama Belakang * :</label>
              <input
                class="form-control input-penulis"
                disabled
                placeholder="<%= response.last_name %>"
                value="<%= response.last_name %>"
                id="nama-belakang"
                name="last_name"
                type="text"
                autocomplete="off"
                required
              />
            </div>
            <div class="d-flex">
              <div class="mt-3" style="margin-right: 1rem">
                <button class="btn btn-primary" onclick="location.href='/penulis/daftar-penulis'">
                  Kembali
                </button>
              </div>
              <div class="mt-3" style="margin-right: 1rem">
                <input type="button" class="btn btn-primary" id="ubah" value="Ubah Penulis" />
              </div>
              <div class="mt-3">
                <button class="btn btn-primary" id="simpan" disabled>Simpan</button>
              </div>
            </div>
          </div>

          <input type="text" id="id" value="<%= response.id %>" style="display: none" />
        </div>
      </section>
    </main>
    <!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"
      ><i class="bi bi-arrow-up-short"></i
    ></a>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <!-- Select2 -->
    <script>
      $(document).ready(function () {
        $(".select2_single").select2({
          placeholder: "Pilih Salah Satu",
          allowClear: true,
        })
        $(".select2_group").select2({})
        $(".select2_multiple").select2({
          placeholder: "Pilih Minimal Satu",
          allowClear: true,
        })
      })
      $("#departemen").prop("disabled", true)
      $("#departemen").val("<%= response.departemen %>")
    </script>
    <!-- /Select2 -->

    <% } %>

    <!-- Vendor JS Files -->
    <script src="/src/view/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="/src/view/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/src/view/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="/src/view/assets/vendor/echarts/echarts.min.js"></script>
    <script src="/src/view/assets/vendor/quill/quill.min.js"></script>

    <!-- Template Main JS File -->
    <script src="/src/view/assets/js/soal/select2.js"></script>
    <script src="/src/view/assets/js/penulis/detail-penulis.js"></script>
  </body>
</html>
